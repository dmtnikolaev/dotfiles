[bar/default-desktop1-mon1]
inherit = bar/default
monitor = ${env:MONITOR:HDMI-0}

[bar/default-desktop1-mon2]
inherit = bar/default
monitor = ${env:MONITOR:DVI-0}

[bar/default-notebook1]
inherit = bar/default
dpi = 144
background = #3a3645

[bar/default]
width = 100%
height = 28

bottom = true

background = #0000000
foreground = #ccffffff

line-color = #00000000
line-size = 16

spacing = 0
padding-right = 5
module-margin = 3

font-0 = NotoSans-Regular:size=10;1
font-1 = MaterialIcons:size=13;4
font-2 = Hack:size=10;2
font-3 = "Font Awesome 5 Free:size=13;4"

modules-left = i3
modules-right = pulseaudio battery keyboard date time

[module/i3]
type = internal/i3

pin-workspaces = true

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 2
label-mode-background = #e60053

label-focused = %index%
label-focused-foreground = #ffffff
label-focused-background = #773f3f3f
label-focused-padding = 4

label-unfocused = %index%
label-unfocused-padding = 4

label-visible = %index%
label-visible-underline = #555555
label-visible-padding = 4

label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 4

[module/pulseaudio]
type = internal/pulseaudio
speaker-mixer = Speaker
headphone-mixer = Headphone
headphone-id = 9

sink = alsa_output.pci-0000_00_1b.0.analog-stereo
use-ui-max = false
interval = 5

format-volume = <label-volume>
label-muted = muted
label-muted-foreground = #66

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
poll-interval = 0

[module/keyboard]
type = custom/script

label = %output:2%
label-font = 3

tail = true
exec = while true; do xkb-switch | tr '[:lower:]' '[:upper:]'; xkb-switch -w; done
click-left = xkb-switch -n

[module/date]
type = internal/date
interval = 5
date = %%{F#fff}%d-%m-%Y%%{F-}

[module/time]
type = internal/date
interval = 5
date = %%{F#fff}%H:%M%%{F-}

