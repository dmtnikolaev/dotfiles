{
    "terminal.integrated.rendererType": "dom",
    "explorer.confirmDelete": false,

    "editor.fontSize": 16,
    "editor.fontFamily": "Hack, Dejavu Sans Mono",
    "editor.tabCompletion": "on",
    "editor.useTabStops": false,
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": false,
    "window.titleBarStyle": "native",
    "window.menuBarVisibility": "hidden",
    "window.enableMenuBarMnemonics": false,
    "workbench.editor.labelFormat": "medium",
    "workbench.list.horizontalScrolling": true,
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultKeybindings": true,
    "workbench.settings.openDefaultSettings": true,
    "workbench.statusBar.feedback.visible": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,

    //
    // Python
    //
    "python.linting.pylintPath": "env/bin/pylint",

    //
    // cSpell
    //
    "cSpell.allowCompoundWords": true,
    "cSpell.language": "en,ru",

    //
    // Dotnet
    //
    "dotnet-test-explorer.autoExpandTree": true,

    //
    // Rust
    //
    "rust.rustup": {
        "toolchain": "nightly-x86_64-unknown-linux-gnu",
        "nightlyToolchain": "nightly-x86_64-unknown-linux-gnu"
    },
    "rust.rls": {
        "useRustfmt": true
    },

    //
    // Markdown
    //
    "markdownlint.config": {
        "MD013": false,
        "MD025": false,
        "MD030": false,
    },

    //
    // Vim
    //
    "vim.leader": "<space>",
    "vim.textwidth": 80,
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.normalModeKeyBindings": [
        {
            "before": [ "J" ],
            "after": [ "5", "j" ]
        },
        {
            "before": [ "K" ],
            "after": [ "5", "k" ]
        },
        {
            "before": [ "H" ],
            "after": [ "^" ]
        },
        {
            "before": [ "L" ],
            "after": [ "$" ]
        },
        {
            "before": [ "<C-n>" ],
            "commands": [ ":tabn" ]
        },
        {
            "before": [ "<C-b>" ],
            "commands": [ ":tabp" ]
        },
        {
            "before": [ "[", "j"],
            "after": [ "J"]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": [ "<C-h>" ],
            "after": [ "<C-w>", "h" ]
        },
        {
            "before": [ "<C-j>" ],
            "after": [ "<C-w>", "j" ]
        },
        {
            "before": [ "<C-k>" ],
            "after": [ "<C-w>", "k" ]
        },
        {
            "before": [ "<C-l>" ],
            "after": [ "<C-w>", "l" ]
        },
        {
            "before": [ "<Space>" ],
            "after": [ "<leader>", "<leader>" ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [ "p" ],
            "after": [ "p", "g", "v", "y" ]
        },
        {
            "before": [ ">" ],
            "commands": [ "editor.action.indentLines" ]
        },
        {
            "before": [ "<" ],
            "commands": [ "editor.action.outdentLines" ]
        },
    ],
    "vim.autoSwitchInputMethod.enable": true,
    "vim.autoSwitchInputMethod.defaultIM": "us",
    "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/bin/xkb-switch",
    "vim.autoSwitchInputMethod.switchIMCmd": "/usr/bin/xkb-switch -s {im}",
    "vim.easymotion": true,
}
